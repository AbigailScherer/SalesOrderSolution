@model SalesOrdersProject.Models.Customer
@{
    ViewBag.Title = "Register User";
}
@using (Html.BeginForm("Register", "Register"))
{
    @Html.ValidationSummary()

    <link href="~/Content/Site.css" rel="stylesheet" />
    <body class="body">
        <div class="main">
            <p class="sign" align="center">Register</p>
            <form class="form1">

                <div class=" form-group">
                    <label class="un " type="text" align="center">First Name</label>
                    @Html.TextBoxFor(x => x.CustomerFirstName, new { @class = "form-control" })
                    <label class="un " type="text" align="center">Last Name</label>
                    @Html.TextBoxFor(x => x.CustomerLastName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="un " type="text" align="center">Address</label>
                    @Html.TextBoxFor(x => x.CustomerStreetAddress, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="un " type="text" align="center">City</label>
                    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="un " type="text" align="center">State</label>
                    @Html.TextBoxFor(x => x.CustomerState, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="un " type="text" align="center">Zip Code</label>
                    @Html.TextBoxFor(x => x.CustomerZipCode, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="un " type="text" align="center">Email (Used as User Name)</label>
                    @Html.TextBoxFor(x => x.CustomerEmailAddress, new { @class = "form-control" })
                </div>

                @*<div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(x => x.CustomerPassword, new { @class = "form-control" })
                    </div>*@

                <div class="text-center">
                    <input class="submit" align="center" type="submit" value="Register" />
                </div>

            </form>

        </div>

    </body>
}




